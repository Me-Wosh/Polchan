{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File", 
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PolchanDB": ""
  },
  "MediatR": {
    "LicenseKey": ""
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "Polchan",
    "Audience": "PolchanAudience",
    "ExpirationInMinutes": 15
  }
}
